<section class="section-content py-3">
  <div class="container-fluid row">
    {{>asideProfile}}
    <main class="col-lg-9">
      <div class="content">
        <p>Product</p>
        <h1>My Products</h1>
        <button class="btn btn--add text-white">ADD ITEM</button>
        <div class="row">
          <ul class="list-unstyled card-columns" style="column-count: 2;">
            {{#each products}}
              <li><a href="/api/v1/products/{{this._id}}" class="row">
                  <div class="col-lg-5">
                    <img
                      src="/images/products/thumbnails/{{this.thumbnail}}"
                      width="150"
                      height="150"
                      alt="Image of {{this.name}}"
                    />
                  </div>
                  <div class="col-lg-7">
                    <p class="product--name">{{this.name}}</p>
                    <p class="product--price">{{this.price}}$</p>
                    <p class="product--date">{{this.dateAdded}}</p>
                  </div>
                </a></li>
            {{/each}}
          </ul>

        </div>
        {{>pagination}}
      </div>
    </main>
  </div>
  <div id="ProductForm">

    {{>productPost}}
  </div>
</section>

<link rel="stylesheet" href="/css/productManager.css" />
<script type="text/javascript">
  const edit = document.querySelector(".btn--add"); 
  const display = document.querySelector(".row");
  const form = document.querySelector("#ProductForm");
  const cancel = document.querySelector("#btn--cancel");

  hideElement(form);

  cancel.addEventListener("click", () => {hideElement(form); showElement(display);});
  edit.addEventListener("click", () => {showElement(form); hideElement(display);});
</script>